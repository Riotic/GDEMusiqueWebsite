# Configuration pour GDE Music Platform

# Base de données
# Pour SQLite (développement)
DATABASE_URL=sqlite:///./gde_music.db

# Pour PostgreSQL (production)
# DATABASE_URL=postgresql://user:password@localhost/gde_music

# Configuration serveur
HOST=0.0.0.0
PORT=8000
DEBUG=True

# Sécurité JWT (à générer avec: openssl rand -hex 32)
SECRET_KEY=your-secret-key-here-replace-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS (origines autorisées)
ALLOWED_ORIGINS=http://localhost:8000,http://localhost:3000

# Upload files
MAX_UPLOAD_SIZE=10485760  # 10MB en bytes
ALLOWED_AUDIO_FORMATS=mp3,wav,flac,m4a
ALLOWED_IMAGE_FORMATS=jpg,jpeg,png,webp
